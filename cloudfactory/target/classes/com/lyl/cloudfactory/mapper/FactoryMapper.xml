<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace表示命名空间   如果sqlSession对象要找到  selelct的话通过  命名空间。select_user_info-->
<mapper namespace="com.lyl.cloudfactory.dao.FactoryDao">
    <!--根据客户编号获取客户信息   提供给增删改查操作   的路径-->
    <!-- parameterType="Integer"     传递参数 -->
    <!-- resultType="com.dao.User"   返回对象 -->
    <!-- #{}就是占位符 -->

    <!--    查询标签-->
    <select id="getFactoryByID" parameterType="String"
            resultType="Factory">
        select * from Factory where factoryID = #{factoryID}
    </select>


    <select id="getFactoryByAccount" parameterType="String"
            resultType="Factory">
        select * from Factory where account = #{account}
    </select>


    <select id="getFactoryListByAccount" parameterType="String"
            resultType="Factory">
        select * from Factory where account like #{account}
    </select>





    <select id="getFactoryByAccountAndPassword" parameterType="String"
            resultType="Factory">
        select * from Factory where account = #{account} and password = #{password}
    </select>

    <select id="getFactoryList"
            resultType="Factory">
        select * from Factory
    </select>
    <!--    添加标签-->
    <insert id="addFactory" parameterType="Factory">
        insert into Factory(factoryID,account,password,type,principal,contact,factoryName,detail,state)
        values(#{factoryID},#{account},#{password},#{type},#{principal},#{contact},#{factoryName},#{detail},#{state})
    </insert>
    <!--删除标签-->

    <delete id="deleteFactoryByAccount" parameterType="String">
        delete from Factory where account = #{account}
    </delete>
    <!--    更新标签-->

    <update id="updateFactory" parameterType="Factory">
        update Factory set
                           factoryID=#{factoryID},account=#{account},password=#{password},type=#{type},principal=#{principal},contact=#{contact},factoryName=#{factoryName},detail=#{detail},state=#{state}
        where account = #{account}

    </update>
</mapper>

