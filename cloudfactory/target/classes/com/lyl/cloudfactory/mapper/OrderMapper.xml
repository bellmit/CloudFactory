<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace表示命名空间   如果sqlSession对象要找到  selelct的话通过  命名空间。select_user_info-->
<mapper namespace="com.lyl.cloudfactory.dao.OrderDao">
    <!--根据客户编号获取客户信息   提供给增删改查操作   的路径-->
    <!-- parameterType="Integer"     传递参数 -->
    <!-- resultType="com.dao.User"   返回对象 -->
    <!-- #{}就是占位符 -->

    <!--    查询标签-->
    <select id="getOrderByID" parameterType="String"
            resultType="Order">
        select * from `Order` where orderID = #{orderID}
    </select>


    <select id="getOrderListByBelongAgencyAccount" parameterType="String"
            resultType="Order">
        select * from `Order` where belongAgencyAccount = #{belongAgencyAccount}
    </select>

    <select id="getOrderListByOrderState" parameterType="String"
            resultType="Order">
        select * from `Order` where orderState = #{orderState}
    </select>

    <select id="getOrderList"
            resultType="Order">
        SELECT * FROM `Order`
    </select>


    <!--    添加标签-->
    <insert id="addOrder" parameterType="Order">
        insert into `Order`(orderID,belongAgencyAccount,productName,orderQuantity,deliveryDate,bidDeadline,receivePeople,receiveAddress,recevieContact,orderState)
        values(#{orderID},#{belongAgencyAccount},#{productName},#{orderQuantity},#{deliveryDate},#{bidDeadline},#{receivePeople},#{receiveAddress},#{recevieContact},#{orderState})
    </insert>
    <!--删除标签-->

    <delete id="deleteOrderByOrderID" parameterType="String">
        delete from `Order` where orderID = #{orderID}
    </delete>
    <!--    更新标签-->

    <update id="updateOrder" parameterType="Order">
        update `Order` set
                         orderID=#{orderID},belongAgencyAccount=#{belongAgencyAccount},productName=#{productName},orderQuantity=#{orderQuantity},deliveryDate=#{deliveryDate},bidDeadline=#{bidDeadline},receivePeople=#{receivePeople},receiveAddress=#{receiveAddress},recevieContact=#{recevieContact},orderState=#{orderState}
        where orderID = #{orderID}

    </update>
</mapper>

