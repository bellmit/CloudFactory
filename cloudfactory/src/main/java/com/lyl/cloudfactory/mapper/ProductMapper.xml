<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace表示命名空间   如果sqlSession对象要找到  selelct的话通过  命名空间。select_user_info-->
<mapper namespace="com.lyl.cloudfactory.dao.ProductDao">
    <!--根据客户编号获取客户信息   提供给增删改查操作   的路径-->
    <!-- parameterType="Integer"     传递参数 -->
    <!-- resultType="com.dao.User"   返回对象 -->
    <!-- #{}就是占位符 -->

    <!--    查询标签-->
    <select id="getProductByProductID" parameterType="String"
            resultType="Product">
        select * from Product where productID = #{productID}
    </select>


    <select id="getProductByProductName" parameterType="String"
            resultType="Product">
        select * from Product where productName = #{productName}
    </select>


    <select id="getProductList"
            resultType="Product">
        select * from Product
    </select>
    <!--    添加标签-->


    <insert id="addProduct" parameterType="Product">
        insert into Product(productID,productName,productType,productSpecifications,productDetail)
        values(#{productID},#{productName},#{productType},#{productSpecifications},#{productDetail})
    </insert>
    <!--删除标签-->

    <delete id="deleteProductByProductID" parameterType="String">
        delete from Product where productID = #{productID}
    </delete>
    <!--    更新标签-->

    <update id="updateProduct" parameterType="Product">
        update Product set
                           productID=#{productID},productName=#{productName},productType=#{productType},productSpecifications=#{productSpecifications},productDetail=#{productDetail}
        where productID = #{productID}

    </update>
</mapper>

