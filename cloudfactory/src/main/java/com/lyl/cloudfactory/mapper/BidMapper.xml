<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace表示命名空间   如果sqlSession对象要找到  selelct的话通过  命名空间。select_user_info-->
<mapper namespace="com.lyl.cloudfactory.dao.BidDao">
    <!--根据客户编号获取客户信息   提供给增删改查操作   的路径-->
    <!-- parameterType="Integer"     传递参数 -->
    <!-- resultType="com.dao.User"   返回对象 -->
    <!-- #{}就是占位符 -->

    <!--    查询标签-->
    <select id="getBidByBidID" parameterType="String"
            resultType="Bid">
        select * from Bid where bidID = #{bidID}
    </select>


    <select id="getBidByOrderID" parameterType="String"
            resultType="Bid">
        select * from Bid where orderID = #{orderID}
    </select>

    <select id="getBidList"
            resultType="Bid">
        select * from Bid
    </select>

    <select id="getBidListByFactoryAccount" parameterType="String"
            resultType="Bid">
        select * from Bid where bidFactroyAccount =#{bidFactroyAccount}
    </select>

    <select id="getBidListByHadBidden"  parameterType="String"
            resultType="Bid">
        select * from Bid where hadBidden =#{hadBidden}
    </select>

    <!--    添加标签-->
    <insert id="addBid" parameterType="Bid">
        insert into Bid(bidID,orderID,bidFactroyAccount,bidPrice,hadBidden,factoryPrincipal,factoryContact)
        values(#{bidID},#{orderID},#{bidFactroyAccount},#{bidPrice},#{hadBidden},#{factoryPrincipal},#{factoryContact})
    </insert>
    <!--删除标签-->
    <delete id="deleteBid" parameterType="String">
        delete from Bid where bidID = #{bidID}
    </delete>
    <!--    更新标签-->

    <update id="updateBid" parameterType="Bid">
        update Bid set
                       bidID=#{bidID},orderID=#{orderID},bidFactroyAccount=#{bidFactroyAccount},bidPrice=#{bidPrice},hadBidden=#{hadBidden},factoryPrincipal=#{factoryPrincipal},factoryContact=#{factoryContact}
        where bidID = #{bidID}

    </update>
</mapper>

