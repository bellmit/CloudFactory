<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace表示命名空间   如果sqlSession对象要找到  selelct的话通过  命名空间。select_user_info-->
<mapper namespace="com.lyl.cloudfactory.dao.AgencyDao">
    <!--根据客户编号获取客户信息   提供给增删改查操作   的路径-->
    <!-- parameterType="Integer"     传递参数 -->
    <!-- resultType="com.dao.User"   返回对象 -->
    <!-- #{}就是占位符 -->
    <!--    查询标签-->
    <select id="getAgencyByID" parameterType="String"
            resultType="Agency">
        select * from Agency where agencyID = #{agencyID}
    </select>


    <select id="getAgencyByAccount" parameterType="String"
            resultType="Agency">
        select * from Agency where account = #{account}
    </select>

    <select id="getAgencyByAccountAndPassword" parameterType="String"
            resultType="Agency">
        select * from Agency where account = #{account} and password = #{password}
    </select>

    <select id="getAgencyList"
            resultType="Agency">
        select * from Agency
    </select>
    <!--    添加标签-->
    <insert id="addAgency" parameterType="Agency">
        insert into Agency(agencyID,account,password,name,type,contact)
        values(#{agencyID},#{account},#{password},#{name},#{type},#{contact})
    </insert>
    <!--删除标签-->
    <delete id="deleteAgencyByAccount" parameterType="String">
        delete from Agency where account = #{account}
    </delete>
    <!--    更新标签-->

    <update id="updateAgency" parameterType="Agency">
        update Agency set
                          agencyID=#{agencyID},account=#{account},password=#{password},name=#{name},type=#{type},contact=#{contact}
        where account = #{account}

    </update>
</mapper>

